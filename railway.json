{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "vercel-monitor",
      "startCommand": "npx tsx scripts/monitoring/vercel-deployment-monitor.ts",
      "cronSchedule": "*/30 * * * *"
    }
  ]
}
