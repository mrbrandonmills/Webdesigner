# Affiliate Program Environment Variables
# Copy this to .env.local and add to Vercel Environment Variables

# Amazon Associates
AMAZON_ASSOCIATES_TAG=brandonmills-20
AMAZON_ASSOCIATES_ACCESS_KEY=your_access_key_here
AMAZON_ASSOCIATES_SECRET_KEY=your_secret_key_here

# ShareASale
SHAREASALE_AFFILIATE_ID=your_affiliate_id_here
SHAREASALE_TOKEN=your_api_token_here
SHAREASALE_SECRET=your_api_secret_here

# CJ Affiliate (Commission Junction)
CJ_PUBLISHER_ID=your_publisher_id_here
CJ_DEVELOPER_KEY=your_developer_key_here
CJ_WEBSITE_ID=your_website_id_here

# Printful
PRINTFUL_REFERRAL_CODE=your_referral_code_here
# Note: Printful API key already exists in main environment

# B&H Photo
BH_AFFILIATE_ID=your_affiliate_id_here

# Impact Radius
IMPACT_ACCOUNT_SID=your_account_sid_here
IMPACT_AUTH_TOKEN=your_auth_token_here

# Tracking & Analytics
AFFILIATE_TRACKING_ENABLED=true
AFFILIATE_COOKIE_DURATION=30

# Email for Affiliate Communications
AFFILIATE_EMAIL=affiliates@brandonmills.com
AFFILIATE_NOTIFICATION_EMAIL=your-email@gmail.com